@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 @model DoAnCoSo.ViewModels.HomeViewModel
@if (TempData["ErrorMessage"] != null)
{
	<div id="alertMessage" class="alert alert-danger" role="alert">
		@TempData["ErrorMessage"]
	</div>
}
@if (TempData["SuccessMessage"] != null)
{
	<div id="alertMessage" class="alert alert-success">
		@TempData["SuccessMessage"]
	</div>
}
<form asp-action="Find" asp-controller="Home" method="get">
	<div class="card card-body">
		<div class="form-group mb-3">
			<label asp-for="DiaDiem">Địa điểm</label>
			<select asp-for="DiaDiem" class="form-control" asp-items="ViewBag.diaDiems"></select>
		</div>
		<div class="form-group">
			<div class="col-md-offset-3" style="text-align: center; justify-content: center">
				<button type="submit" class="btn btn-primary">Tìm xe</button>
			</div>
		</div>
	</div>
</form>
<div class="row">
	@foreach (var item in Model.xes)
	{
		<div class="col-md-3 mb-5 mt-5">
			<div class="card">
				<div class="card-header card-header-tabs">
					<div class="card-body" style="text-align: center">
						<img style="max-height: 150px" src="~/images/xe/@item.BienSoXe/@item.AnhXe" />
						<div class="caption">
							<h4>@item.TenXe</h4>
							<p>Giá: @item.GiaThue VNĐ</p>
							<p>
								<a asp-action="ThueXe" asp-controller="Home" asp-route-BienSoXe="@item.BienSoXe" class="btn btn-info" role="button"><i class="bi bi-three-dots"></i> Chi tiết</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>


